{
  "name": "prism-code",
  "displayName": "Prism Code",
  "description": "コードを視覚化するVSCode拡張機能",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prismcode.visualize",
        "title": "Prism Code: コードを可視化"
      },
      {
        "command": "prismcode.switchToMacro",
        "title": "Prism Code: マクロビュー(現在のファイル)"
      },
      {
        "command": "prismcode.switchToMicro",
        "title": "Prism Code: ミクロビュー(詳細)"
      },
      {
        "command": "prismcode.showWorkspaceMacroView",
        "title": "Prism Code: ワークスペース全体のマクロビュー"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "prismcode-sidebar",
          "title": "Prism Code",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "prismcode-sidebar": [
        {
          "type": "webview",
          "id": "prismcode.aiChat",
          "name": "AI アシスタント",
          "icon": "media/icon.svg"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == typescript || resourceLangId == typescriptreact",
          "command": "prismcode.visualize",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == typescript || resourceLangId == typescriptreact",
          "command": "prismcode.switchToMacro",
          "group": "prismcode@1"
        },
        {
          "when": "resourceLangId == typescript || resourceLangId == typescriptreact",
          "command": "prismcode.switchToMicro",
          "group": "prismcode@2"
        }
      ]
    },
    "configuration": {
      "title": "Prism Code",
      "properties": {}
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile && pnpm run compile:webview",
    "compile": "tsc -p ./",
    "compile:webview": "pnpm --dir webview-ui run build",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "ts-morph": "^21.0.0"
  }
}
