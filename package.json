{
  "name": "logicflow-bridge",
  "displayName": "LogicFlowBridge",
  "description": "TypeScriptコードをフローチャートで視覚化するVSCode拡張機能",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "logicflowbridge.visualize",
        "title": "LogicFlow: コードを可視化"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == typescript || resourceLangId == typescriptreact",
          "command": "logicflowbridge.visualize",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "ts-morph": "^21.0.0"
  }
}
